#pragma once

{%- import "common.hpp.in" as common %}

#include "aliases.hpp"
{% for inc in cls_.get_header_includes() -%}
#include "{{ inc }}.hpp"
{% endfor %}

namespace {{ cls_.namespace.name }} {

class {{ cls_.name }}
{%- for p in cls_.get_parents() %}
    {{ "," if not loop.first else ":" }} public {{ p }}
{%- endfor %}
{
public:
    {% for m in cls_.methods.values() %}
    {{ common.method(m) }}
    {% endfor %}
};

} //namespace {{ cls_.namespace.name }};
